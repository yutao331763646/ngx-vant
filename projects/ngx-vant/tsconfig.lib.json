/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "target": "es2015",
        // "baseUrl": ".",
        // "rootDir": ".",
        // "paths": {
        //     "ngx-vant/*": [
        //         "./*"
        //     ]
        // },
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        // "types": [
        //     "jasmine"
        // ],
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    // "exclude": [
    //     "src/test.ts",
    //     "**/*.spec.ts"
    // ],
    "include": [
        "**/*.ts",
        "./**/*.ts"
    ]
}